{
  "name": "node-app-template",
  "version": "0.1.2",
  "description": "Template for my node apps",
  "main": "index.js",
  "repository": "git@github.com:brunorodmoreira/node-app-template.git",
  "author": "Bruno Moreira <bruno@brunormoreira.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "test": "jest --collectCoverage --detectOpenHandles",
    "version": "chan release ${npm_package_version} && git add CHANGELOG.md"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "joi": "^17.4.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^10.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@brunormoreira/eslint-config": "^0.1.3",
    "@brunormoreira/prettier-config": "^0.1.1",
    "@brunormoreira/tsconfig": "^0.1.0",
    "@geut/chan": "2.x",
    "@types/jest": "^26.0.23",
    "@types/koa": "^2.13.3",
    "@types/koa-bodyparser": "^4.3.1",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-router": "^7.4.2",
    "@types/node": "^16.0.0",
    "eslint": "^7.30.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
